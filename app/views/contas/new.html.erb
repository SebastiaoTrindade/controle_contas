<div class="container mt-5">
  <h1 class="mb-4 text-center">Cadastrar Conta</h1>

  <div class="card shadow p-4">
    <%= form_with model: @conta, url: contas_path, local: true, class: "needs-validation" do |form| %>
      <div class="row mb-3">
        <div class="col-12 col-md-6">
          <%= form.label :nome_empresa, class: "form-label" %>
          <%= form.text_field :nome_empresa, class: "form-control", placeholder: "Digite o nome da empresa", required: true %>
        </div>

        <div class="col-12 col-md-6">
          <%= form.label :valor, class: "form-label" %>
          <%= form.number_field :valor, step: 0.01, class: "form-control", placeholder: "0.00", required: true %>
        </div>
      </div>

      <div class="mb-3">
        <%= form.label :descricao, class: "form-label" %>
        <%= form.text_area :descricao, class: "form-control", placeholder: "DescriÃ§Ã£o detalhada da conta", rows: 3, required: true %>
      </div>

      <div class="row mb-3">
        <div class="col-12 col-md-6">
          <%= form.label :data_vencimento, class: "form-label" %>
          <%= form.date_field :data_vencimento, class: "form-control", required: true %>
        </div>

        <div class="col-12 col-md-6">
          <%= form.label :status, class: "form-label" %>
          <%= form.select :status, ['Pendente', 'Pago', 'Vencido'], {}, class: "form-select", required: true %>
        </div>
      </div>

      <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-4 gap-3">
        <%= form.submit "Cadastrar Conta", class: "btn btn-primary btn-lg w-100 w-md-auto px-4" %>
        <%= link_to "Voltar", contas_path, class: "btn btn-secondary btn-lg w-100 w-md-auto px-4" %>
      </div>
    <% end %>
  </div>
</div>
